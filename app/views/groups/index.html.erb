<div class= "header">
  <%= link_to root_path do  %><%= image_tag "return-arrow.png", class:"back"%><%end%>
  <h2 class="category">Categorias de Transações</h2>
  <%= link_to user_path(current_user.id) do %>
    <%= image_tag "person.png", class:"my-profile-icon"%>
  <%end%>
  <%= button_to destroy_user_session_path, method: :delete, class:"close-app" do %> 
    <%= image_tag "close-app.png", class:"close-app"%>
  <%end%>
</div>


<div id="groups">
  <%if @groups.any?%>
    <% @groups.each do |group| %>
      <%if can? :manage, group%>
        <div class= "group">
          <%= link_to group_operations_path(group), id: "group-container" do %>
            <%= render group %>
          <%end%>
          <div class= "group-footers">
            <div>
            </div>
            <div class= "show-delete">
              <%= link_to "Visualizar", group %>
              <%= button_to "Remover", group, method: :delete, class: "delete" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <%else%>
      <h3 style="text-align: center; color: white">Você não possui categorias cadastradas</h3>
  <%end%>

</div>

<div class= "new-group">
  <%= link_to new_group_path do%>
    <div class= "new-group-btn">
      Adicionar categoria
      <%= image_tag "plus-small.png", class: "plus-icon" %>
    </div>
  <% end %>
</div>
