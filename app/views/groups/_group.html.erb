<div id="group">
  <div class= "image-icon">
    <img src=<%= group.icon %> class= "group-img">
    <h3>
      <%= group.name %>
    </h3>
  </div>
  <div class="category-total-amount">
    <strong class="<%= group.group_amount < 0 ? "less-then-zero" : "" %>">
      Saldo total: <%= number_to_currency(group.group_amount, :unit => "R$ ", :separator => ",", :delimiter => ".") %> 
    </strong>
  </div>
</div>

