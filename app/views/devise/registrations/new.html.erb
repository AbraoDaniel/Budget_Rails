<div class= "session-container">
  <div class= 'form-login-header'>
    REGISTRAR NOVA CONTA
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="group-name" style="margin-left: 80px">
      <%= f.label "Nome" %>
      <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "Informe seu nome" %>
    </div>
    
    <div class="group-name" style="margin-left: 80px">
      <%= f.label "Email" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Informe seu email"  %>
    </div>

    <div class="group-name" style="margin-left: 80px">
      <%= f.label "Senha" %>
      <% if @minimum_password_length %>
      <em>(m√≠nimo de <%= @minimum_password_length %> caracteres)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Informe sua senha" %>
    </div>

    <div class="group-name" style="margin-left: 80px">
      <%= f.label "Confirmar Senha" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: "Confirme sua senha"  %>
    </div>

    <div class="actions">
      <%= f.submit "Registrar" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>