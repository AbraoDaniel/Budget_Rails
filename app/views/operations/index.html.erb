<div id= "">
  <p style="color: green"><%= notice %></p>

  <div class= "header">
    <%= link_to groups_path do %><%= image_tag "back.png", class:"back"%><%end%>
    <h2>Transactions</h2>
    <%= button_to destroy_user_session_path, method: :delete, class: "off" do %> 
      <%= image_tag "off.png", class:"off"%>
    <%end%>
  </div>

  <div class= "total-transactions">
    <small class= "total-transactions">
    <strong>Total Transactions:</strong>
    $<%= @operations.inject(0) { |sum, t| sum += t.amount  }%> 
    </small>
  </div>

  <div id="operations">
      <% if @operations.any? %>
        <div class= "group">
          <% @operations.each do |operation| %>
            <%= render operation %> 
          <% end %>
        </div>
      <% else %>
        <h2 style="text-align: center">No Transactions found, Add a new operation.</h2>
      <% end %>
  </div>
  <div class= "new-group">
    <%= link_to new_group_operation_path do%>
      <div class= "new-group-btn">
        Nova transação
        <%= image_tag "plus-small.png", class: "plus-icon" %>
      </div>
    <% end %>
  </div>
</div>
