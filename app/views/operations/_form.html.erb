<div class= "form">
  <%= form_with model: @operation, url: group_operations_path, method: :post do |form| %>
    <% if operation.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(operation.errors.count, "error") %> prohibited this operation from being saved:</h2>

        <ul>
          <% operation.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class= "group-name">
      <%= form.label "Nome", style: "display: block" %>
      <%= form.text_field :name, placeholder: "Insira o nome da transação" %>
    </div>

    <div class="group-name"> 
      <%= form.label "Tipo de transação", style: "display: block" %>
      <div class= "dropdown">
        <%= form.select :operation_type, @operation_types.map { |operation_type| [operation_type['name'], operation_type['source']] } %>
      </div> 
    </div>

    <div class= "group-name">
      <%= form.label "Valor", style: "display: block" %>
      <%= form.number_field :amount %>
    </div>
    <div class="actions">
      <%= form.submit "Criar" %>
    </div>
  <% end %>
</div>
