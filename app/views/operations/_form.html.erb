<div class= "session-container">
  <div class= 'form-login-header'>
    <%= image_tag @group.icon, style:"width: 35px; margin-right: 15px; margin-bottom: -8px"%><%if @operation.id %> EDITAR TRANSAÇÃO<%else%><span style="margin-left: -10px">NOVA TRANSAÇÃO<span><%end%>
  </div>
  <%= form_with model: @operation, url: @operation.id ? update_operation_operation_path({id: @operation.id, group_id: @group.id}) : group_operations_path, method: @operation.id ? :put : :post do |form| %>
    <div class= "group-name">
      <%= form.label "Nome", style: "display: block" %>
      <%= form.text_field :name, value: @operation.name, placeholder: "Insira o nome da transação" %>
    </div>

    <div class="group-name"> 
      <%= form.label "Tipo de transação", style: "display: block" %>
      <div class= "dropdown">
        <%= form.select :operation_type, @operation_types.map { |operation_type| [operation_type['name'], operation_type['source']] } %>
      </div> 
    </div>

    <div class= "group-name">
      <%= form.label "Valor", style: "display: block" %>
      <%= form.number_field :amount %>
    </div>
    <div class="actions">
      <%= form.submit "Salvar" %>
    </div>
  <% end %>
</div>
